<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CounselingOrganizationPlatform.AvaloniaUI.Views.UserManagementView">
  <StackPanel Margin="10">
    <DataGrid Name="UsersDataGrid" Height="400" AutoGenerateColumns="True" />
    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left" Spacing="10">
      <Button Name="AddUserButton" Content="Add User" Width="80" />
      <Button Name="EditUserButton" Content="Edit User" Width="80" />
      <Button Name="DeleteUserButton" Content="Delete User" Width="80" />
    </StackPanel>
  </StackPanel>
</UserControl>
