<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CounselingOrganizationPlatform.AvaloniaUI.Views.RegistrationView">
  <StackPanel Margin="20" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
    <TextBlock Text="Register" FontSize="20" HorizontalAlignment="Center"/>
    <TextBox Name="NameTextBox" Watermark="Name" />
    <TextBox Name="EmailTextBox" Watermark="Email" />
    <TextBox Name="PasswordTextBox" Watermark="Password" PasswordChar="*"/>
    <Button Name="RegisterButton" Content="Register" />
    <Button Name="BackToLoginButton" Content="Back to Login" />
  </StackPanel>
</UserControl>
