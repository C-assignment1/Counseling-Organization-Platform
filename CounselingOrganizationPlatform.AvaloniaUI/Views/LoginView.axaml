<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CounselingOrganizationPlatform.AvaloniaUI.Views.LoginView">
  <StackPanel Margin="20" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
    <TextBlock Text="Login" FontSize="20" HorizontalAlignment="Center"/>
    <TextBox Name="EmailTextBox" Watermark="Email" />
    <TextBox Name="PasswordTextBox" Watermark="Password" PasswordChar="*"/>
    <Button Name="LoginButton" Content="Login" />
    <Button Name="RegisterButton" Content="Register" />
  </StackPanel>
</UserControl>
